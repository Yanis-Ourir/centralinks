    <aside class="w-64 bg-[#1e1e1e] border-r border-gray-700 p-6 flex flex-col justify-between shadow-md shadow-black/20">
        <div>
            <h2 class="text-xl font-bold mb-6">Categories</h2>

            <div class="space-y-3 overflow-y-auto max-h-[70vh] pr-1">
                {% if categories %}
                    {% for category in categories %}
                        <a href="{{ path('app_category_show', {'id': category.id}) }}"
                           class="block bg-[#2a2a2a] px-4 py-2 rounded-lg hover:bg-yellow-400 hover:text-black transition font-medium">
                            {{ category.name }}
                        </a>
                    {% endfor %}
                {% else %}
                    <p class="text-sm text-gray-400">No categories yet.</p>
                {% endif %}
            </div>
        </div>

        <div class="pt-6">
            <a href="{{ path('app_category_new') }}"
               class="block w-full text-center bg-yellow-400 hover:bg-yellow-500 text-black font-semibold py-2 px-4 rounded-lg transition">
                + Add Category
            </a>
        </div>
    </aside>