{% extends 'base.html.twig' %}

{% block title %}Hello FeedController!{% endblock %}

{% block body %}
<!-- NAVBAR SUR LE COTE -->
<div class="flex flex-col items-center justify-center min-h-screen bg-[#161616] text-white">
    <div class="w-full max-w-3xl bg-[#1e1e1e] p-8 rounded-2xl shadow-md shadow-black/30 border border-gray-700">
        <h1 class="text-2xl font-bold mb-6 text-center">Welcome to your Feed</h1>

        <div class="flex flex-col space-y-4">
        {% if categories %}
            {% for category in categories %}
                <div class="bg-[#2a2a2a] p-4 rounded-lg">
                    <a href={{ path('app_category_show', {'id': category.id}) }} class="text-lg font-semibold">{{ category.name }}</h2>
                </div>
            {% endfor %}
        {% else %}
            <p class="text-gray-400">No categories found. Please add a new category.</p>
        {% endif %}
        </div>
        <div class="mt-6">
            <a href="{{ path('app_category_new') }}" class="bg-yellow-400 hover:bg-yellow-500 text-black font-semibold py-2 px-4 rounded-lg transition">Add New Category</a>
        </div>
    </div>
</div>

{% endblock %}
